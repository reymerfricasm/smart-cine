@model IEnumerable<RelationShipsExample.Models.Director>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lista de directores</h2>

<p>
    @Html.ActionLink("Agregar nuevo", "Create", null, new { @class = "btn btn-default" })
</p>
<table class="table table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>Acciones</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.DirectorId }, new { @class = "btn btn-warning"}) |
            @Html.ActionLink("Detalles", "Details", new { id=item.DirectorId }, new { @class = "btn btn-success"}) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.DirectorId }, new { @class  = "btn btn-danger"})
        </td>
    </tr>
}

</table>
