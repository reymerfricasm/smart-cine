@model IEnumerable<RelationShipsExample.Models.Genre>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lista de generos</h2>

<p>
    @Html.ActionLink("Agregar nuevo", "Create", null, new { @class = "btn btn-default"})
</p>
<table class="table table-hover table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th>Acciones</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Type)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.GenreId }, new { @class = "btn btn-warning"}) |
            @Html.ActionLink("Detalles", "Details", new { id=item.GenreId }, new { @class = "btn btn-success"}) |
            @Html.ActionLink("Eliminar", "Delete", new { id = item.GenreId }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
